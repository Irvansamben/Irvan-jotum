<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jo"/>

    <TextView
        android:id="@+id/slide_head"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one_regular"
        android:gravity="center"
        android:text="Pusing memikirkan tugas"
        android:textColor="#164F5E"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_image" />

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="17sp"
        android:fontFamily="@font/carter_one_regular"
        android:text="jangan khawatir, kami siap membantu problem anda"
        android:textColor="#717171"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_head" />
</androidx.constraintlayout.widget.ConstraintLayout>